<Page x:Class="TestLayout.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestLayout"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">
    <DockPanel Background="White" Margin="10 10 10 10">
        <DockPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right">
            <Button>OK</Button>
            <Button>Cancel</Button>
        </DockPanel>
        <Border DockPanel.Dock="Top" BorderBrush="Black" BorderThickness="1" CornerRadius="4" >
            <TextBlock Text="This is a text" />
        </Border>
    </DockPanel>
</Page>
